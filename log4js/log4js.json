{
  "appenders": {
    "stdout": {
      "type": "stdout",
      "layout": {
        "type": "pattern",
        "pattern": "[%d %p] %m"
      }
    },
    "daily": {
      "type": "dateFile",
      "filename": "../log4js/logs/all",
      "pattern": ".yyyy-MM-dd.log",
      "alwaysIncludePattern": true,
      "compress": true,
      "daysToKeep": 30,
      "layout": {
        "type": "pattern",
        "pattern": "[%d %p] %m"
      }
    },
    "errorFile": {
      "type": "file",
      "filename": "../log4js/logs/error.log",
      "maxLogSize": 10485760,
      "backups":10,
      "compress": true
    },
    "error": {
      "type": "logLevelFilter",
      "appender": "errorFile",
      "level": "error"
    },
    "infoFile": {
      "type": "file",
      "filename": "../log4js/logs/info.log",
      "maxLogSize": 10485760,
      "backups": 10,
      "compress": true
    },
    "info": {
      "type": "logLevelFilter",
      "appender": "infoFile",
      "level": "info"
    }
  },
  "categories": {
    "default": {
      "appenders": [
        "stdout",
        "daily",
        "error",
        "info"
      ],
      "level": "DEBUG"
    }
  }
}